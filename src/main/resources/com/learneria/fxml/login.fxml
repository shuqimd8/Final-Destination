<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>

<StackPane prefHeight="683" prefWidth="683" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.learneria.controller.LoginController">

    <!--  Background image (behind everything) -->
    <ImageView fitHeight="683" fitWidth="683">
        <Image url="@../assets/backgrounds/Background.jpg" />
    </ImageView>

    <!-- Semi-transparent overlay for readability -->
    <Rectangle fill="rgba(255,255,255,0.85)" height="683" width="683" />

    <!--  Centered login card -->
    <VBox alignment="CENTER" prefHeight="420" prefWidth="350" spacing="10" style="-fx-background-color: white;                  -fx-background-radius: 15;                  -fx-border-color: black;                  -fx-border-radius: 15;                  -fx-border-width: 2;                  -fx-padding: 20;">

        <!-- Title -->
        <Label style="-fx-font-size: 30;                       -fx-font-family: 'Josefin Sans';                       -fx-font-weight: bold;                       -fx-text-fill: #2563eb;" text="Papaâ€™s Learnaria" />

        <!-- Subtitle -->
        <Label style="-fx-font-size: 20;                       -fx-font-family: 'Josefin Sans';                       -fx-font-weight: bold;                       -fx-text-fill: #3DC6E8;                       -fx-padding: 5 0 15 0;" text="Log In" />

        <!-- Username -->
        <VBox alignment="CENTER_LEFT" spacing="3">
            <Label style="-fx-font-size: 15;                           -fx-font-family: 'Josefin Sans';                           -fx-font-weight: bold;" text="Username:" />
            <TextField fx:id="usernameField" prefWidth="220" promptText="Enter your username" style="-fx-background-radius: 10;                               -fx-border-radius: 10;                               -fx-border-color: black;                               -fx-background-color: white;                               -fx-border-width: 1.5;                               -fx-padding: 6;" />
        </VBox>

        <!-- Password -->
        <VBox alignment="CENTER_LEFT" spacing="3">
            <Label style="-fx-font-size: 15;                           -fx-font-family: 'Josefin Sans';                           -fx-font-weight: bold;" text="Password:" />
            <PasswordField fx:id="passwordField" prefWidth="220" promptText="Enter your password" style="-fx-background-radius: 10;                                   -fx-border-radius: 10;                                   -fx-border-color: black;                                   -fx-background-color: white;                                   -fx-border-width: 1.5;                                   -fx-padding: 6;" />
        </VBox>

        <!-- Buttons -->
        <VBox alignment="CENTER" spacing="12" style="-fx-padding: 20 0 0 0;">
            <Button onAction="#handleLogin" prefHeight="35" prefWidth="200" style="-fx-background-color: #66CCFF;                            -fx-border-color: black;                            -fx-border-width: 1.5;                            -fx-background-radius: 15;                            -fx-border-radius: 15;                            -fx-text-fill: black;                            -fx-font-weight: bold;" text="Sign In" />

            <Button onAction="#handleCreateAccount" prefHeight="35" prefWidth="200" style="-fx-background-color: #FFEE77;                            -fx-border-color: black;                            -fx-border-width: 1.5;                            -fx-background-radius: 15;                            -fx-border-radius: 15;                            -fx-text-fill: black;                            -fx-font-weight: bold;" text="Create Account" />
        </VBox>
    </VBox>
    <Accordion />
    <AmbientLight color="CHARTREUSE"/>
</StackPane>
