<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.learneria.controller.TeacherMainController"
            prefWidth="1000" prefHeight="700"
            style="-fx-background-color: #FFFFFF;">

    <!--  Background -->
    <ImageView fitWidth="1000" fitHeight="700" opacity="0.15" preserveRatio="false">
        <image>
            <Image url="@../assets/backgrounds/Background.jpg" />
        </image>
    </ImageView>

    <!-- Centered Title Logo -->
    <ImageView layoutX="190" layoutY="30" fitWidth="300" preserveRatio="true">
        <image>
            <Image url="@../assets/fonts/GameTitle.png" />
        </image>
    </ImageView>


    <!--  Profile Card (top-right) -->
    <VBox layoutX="760" layoutY="40" spacing="10" alignment="CENTER"
          style="-fx-background-color: white; -fx-border-color: black;
                 -fx-border-radius: 20; -fx-background-radius: 20;
                 -fx-padding: 10 20;">

        <VBox alignment="CENTER" spacing="2">
            <Label text="Teacher" style="-fx-font-family: 'Jost'; -fx-font-weight: bold; -fx-font-size: 16;"/>
            <Label text=" Educator" style="-fx-font-family: 'Jost'; -fx-font-size: 14;"/>
        </VBox>

        <!-- Sign Out button under profile -->
        <Button text="Sign Out"
                onAction="#handleLogout"
                prefWidth="120" prefHeight="36"
                style="-fx-font-family: 'Jost'; -fx-font-size: 14;
                       -fx-font-weight: bold; -fx-background-color: #A6E4FF;
                       -fx-background-radius: 20; -fx-border-radius: 20;
                       -fx-border-color: black;"/>
    </VBox>

    <!--  Menu Card -->
    <VBox layoutX="200" layoutY="200" prefWidth="600" prefHeight="340"
          alignment="CENTER" spacing="25"
          style="-fx-background-color: white; -fx-border-color: black;
                 -fx-border-radius: 25; -fx-background-radius: 25;
                 -fx-effect: dropshadow(gaussian, #00000033, 8, 0, 0, 4);">

        <Label text="Teacher Main Menu"
               alignment="CENTER" prefWidth="600" prefHeight="60"
               style="-fx-background-color: #FF5BC3; -fx-text-fill: black;
                      -fx-font-family: 'Jost'; -fx-font-size: 24; -fx-font-weight: bold;
                      -fx-background-radius: 25 25 0 0; -fx-border-color: black;
                      -fx-border-width: 0 0 1 0;"/>

        <Label fx:id="welcomeLabel" text="Welcome, teacher!"
               style="-fx-font-family: 'Jost'; -fx-font-size: 18; -fx-text-fill: #333333;"/>

        <!-- Buttons Row -->
        <HBox alignment="CENTER" spacing="40">

            <!-- Dashboard -->
            <Button text="Dashboard"
                    onAction="#openDashboard"
                    prefWidth="150" prefHeight="150"
                    style="-fx-font-family: 'Jost'; -fx-font-size: 16; -fx-font-weight: bold;
                           -fx-background-color: #A6E4FF; -fx-background-radius: 100;
                           -fx-border-radius: 100; -fx-border-color: black;"/>

            <!-- Manage Classes -->
            <Button text="Manage Classes"
                    onAction="#openClassList"
                    prefWidth="150" prefHeight="150"
                    style="-fx-font-family: 'Jost'; -fx-font-size: 16; -fx-font-weight: bold;
                           -fx-background-color: #FFD966; -fx-background-radius: 100;
                           -fx-border-radius: 100; -fx-border-color: black;"/>

            <!-- Reports -->
            <Button text="View Reports"
                    onAction="#openReports"
                    prefWidth="150" prefHeight="150"
                    style="-fx-font-family: 'Jost'; -fx-font-size: 16; -fx-font-weight: bold;
                           -fx-background-color: #ADFFA3; -fx-background-radius: 100;
                           -fx-border-radius: 100; -fx-border-color: black;"/>
        </HBox>
    </VBox>

    <!-- âš™Settings (bottom-right gear icon) -->
    <Button layoutX="860" layoutY="630"
            onAction="#openSettings"
            prefWidth="80" prefHeight="80"
            style="-fx-background-color: transparent; -fx-cursor: hand;">
        <graphic>
            <ImageView fitWidth="80" fitHeight="80">
                <image>
                    <Image url="@../assets/icons/SettingButton.png" />
                </image>
            </ImageView>
        </graphic>
    </Button>
</AnchorPane>
