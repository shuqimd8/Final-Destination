<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.learneria.controller.TeacherDashboardController"
            prefWidth="1000" prefHeight="700"
            style="-fx-background-color: #FFFFFF;">

    <!--  Background -->
    <ImageView fitWidth="1000" fitHeight="700" opacity="0.15" preserveRatio="false">
        <image>
            <Image url="@../assets/backgrounds/Background.jpg" />
        </image>
    </ImageView>

    <!--  Title -->
    <Label text="Papaâ€™s Learneria"
           layoutX="380" layoutY="50"
           style="-fx-font-family: 'Josefin Sans'; -fx-font-size: 36;
                  -fx-font-weight: bold; -fx-text-fill: #0047AB; -fx-rotate: -5;"/>

    <!--  Back Button with Image -->
    <Button layoutX="40" layoutY="40"
            onAction="#handleBack"
            prefWidth="60" prefHeight="60"
            style="-fx-background-color: transparent; -fx-cursor: hand;">
        <graphic>
            <ImageView fitWidth="50" fitHeight="50" preserveRatio="true">
                <image>
                    <Image url="@../assets/icons/BackArrow.png" />
                </image>
            </ImageView>
        </graphic>
    </Button>


    <!--  Floating teacher profile (no black box) -->
    <VBox layoutX="760" layoutY="40" spacing="6" alignment="CENTER">
        <Label fx:id="teacherNameLabel"
               text="Teacher"
               style="-fx-font-family: 'Jost'; -fx-font-weight: bold; -fx-font-size: 16;"/>
        <Label text=" Educator"
               style="-fx-font-family: 'Jost'; -fx-font-size: 14;"/>

        <!-- Sign out button -->
        <Button text="Sign Out" onAction="#handleLogout"
                prefWidth="120" prefHeight="36"
                style="-fx-font-family: 'Jost'; -fx-font-size: 14;
                       -fx-font-weight: bold; -fx-background-color: #A6E4FF;
                       -fx-background-radius: 20; -fx-border-radius: 20;
                       -fx-border-color: black;"/>
    </VBox>

    <!--  Class Management Panel -->
    <VBox layoutX="200" layoutY="180" prefWidth="600" prefHeight="400"
          alignment="TOP_CENTER" spacing="15"
          style="-fx-background-color: #FFFFFF;
       -fx-border-color: #00000022; /* soft border */
       -fx-border-radius: 25; -fx-background-radius: 25;
       -fx-effect: dropshadow(gaussian, #00000033, 8, 0, 0, 4);">

        <Label text="Your Classes"
               alignment="CENTER" prefWidth="600" prefHeight="60"
               style="-fx-background-color: #FFEB70; -fx-font-family: 'Jost';
                      -fx-font-size: 24; -fx-font-weight: bold;
                      -fx-border-color: black; -fx-border-width: 0 0 1 0;
                      -fx-background-radius: 25 25 0 0;"/>

        <ListView fx:id="classListView"
                  prefHeight="270" prefWidth="500"
                  style="-fx-font-family: 'Jost'; -fx-font-size: 16;
                         -fx-background-radius: 20; -fx-border-radius: 20;"/>

        <!--  Button Row( soft transparent background) -->
        <HBox alignment="CENTER" spacing="25"
              style="-fx-background-color: transparent;
             -fx-padding: 10 0 20 0;">
            <Button text=" Add Class" onAction="#handleAddClass"
                    prefWidth="150" prefHeight="40"
                    style="-fx-background-color: #ADFFA3;
                   -fx-border-color: black; -fx-border-width: 1;
                   -fx-background-radius: 25; -fx-border-radius: 25;
                   -fx-font-family: 'Jost'; -fx-font-size: 16; -fx-font-weight: bold;
                   -fx-cursor: hand;"/>

            <Button text=" Edit" onAction="#handleEditClass"
                    prefWidth="120" prefHeight="40"
                    style="-fx-background-color: #FFD966;
                   -fx-border-color: black; -fx-border-width: 1;
                   -fx-background-radius: 25; -fx-border-radius: 25;
                   -fx-font-family: 'Jost'; -fx-font-size: 16; -fx-font-weight: bold;
                   -fx-cursor: hand;"/>

            <Button text=" Delete" onAction="#handleDeleteClass"
                    prefWidth="120" prefHeight="40"
                    style="-fx-background-color: #FF5B5B;
                   -fx-border-color: black; -fx-border-width: 1;
                   -fx-background-radius: 25; -fx-border-radius: 25;
                   -fx-font-family: 'Jost'; -fx-font-size: 16;
                   -fx-font-weight: bold; -fx-text-fill: white;
                   -fx-cursor: hand;"/>
        </HBox>
    </VBox>

    <!-- Settings Gear -->
    <Button layoutX="870" layoutY="620"
            onAction="#openSettings"
            prefWidth="80" prefHeight="80"
            style="-fx-background-color: transparent; -fx-cursor: hand;">
        <graphic>
            <ImageView fitWidth="80" fitHeight="80">
                <image>
                    <Image url="@../assets/icons/SettingButton.png" />
                </image>
            </ImageView>
        </graphic>
    </Button>

</AnchorPane>
