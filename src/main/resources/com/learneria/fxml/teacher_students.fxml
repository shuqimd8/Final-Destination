<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.learneria.controller.TeacherStudentsController"
            prefWidth="1000" prefHeight="650"
            style="-fx-background-color: #fefcf6;">

    <!-- Title -->
    <Label text="Manage Students"
           layoutX="360" layoutY="30"
           style="-fx-font-size: 32; -fx-font-family: 'Comic Sans MS'; -fx-font-weight: bold; -fx-text-fill: #2b2b2b;"/>

    <!-- Teacher Info -->
    <VBox layoutX="760" layoutY="30" alignment="CENTER_RIGHT" spacing="5">
        <Label fx:id="teacherNameLabel"
               text=" Miss Harrison"
               style="-fx-font-size: 18; -fx-font-weight: bold; -fx-text-fill: #333;"/>
        <Button text="Sign Out" onAction="#handleLogout"
                style="-fx-background-color: #a3d6ff; -fx-font-weight: bold; -fx-text-fill: black;"
                prefWidth="120"/>
    </VBox>

    <!-- Main Panel -->
    <VBox layoutX="250" layoutY="120" spacing="15"
          alignment="TOP_CENTER"
          prefWidth="500" prefHeight="460"
          style="-fx-background-color: #fff9c4; -fx-border-color: #333; -fx-border-radius: 10; -fx-background-radius: 10; -fx-padding: 20;">

        <Label text=" Manage Students by Class"
               style="-fx-font-size: 22; -fx-font-weight: bold; -fx-background-color: #ffec70; -fx-padding: 5 0 5 0;"/>

        <!-- Class dropdown -->
        <ComboBox fx:id="classDropdown"
                  promptText="Select a Class"
                  prefWidth="300"
                  style="-fx-font-size: 15;"/>

        <Label fx:id="classCodeLabel"
               text="Class Code: -"
               style="-fx-font-size: 16; -fx-text-fill: #333;"/>

        <!-- Student List -->
        <Label text="Students (Double-click to view performance):"
               style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #444;"/>
        <ListView fx:id="studentList"
                  prefWidth="460" prefHeight="250"
                  style="-fx-background-color: white; -fx-border-color: #c5c5c5; -fx-font-size: 16;"/>

        <!-- Class statistics -->
        <HBox spacing="40" alignment="CENTER">
            <Label fx:id="totalStudentsLabel"
                   text="Students: -"
                   style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #333;"/>
            <Label fx:id="avgScoreLabel"
                   text="Class Avg Score: -"
                   style="-fx-font-size: 16; -fx-font-weight: bold; -fx-text-fill: #333;"/>
        </HBox>
    </VBox>

    <!-- Back Button -->
    <Button text="← Back"
            layoutX="40" layoutY="40"
            onAction="#handleBack"
            style="-fx-background-color: #c3f1ff; -fx-font-weight: bold; -fx-font-size: 14;"/>



</AnchorPane>
