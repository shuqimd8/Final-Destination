<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.learneria.controller.TeacherReportsController"
            prefWidth="1000" prefHeight="650"
            style="-fx-background-color: #fefcf6;">

    <!-- Title -->
    <Label text="Class Performance Overview"
           layoutX="320" layoutY="30"
           style="-fx-font-size: 30; -fx-font-family: 'Comic Sans MS'; -fx-text-fill: #2b2b2b;"/>

    <!-- Back Button -->
    <Button text="← Back"
            layoutX="40" layoutY="40"
            onAction="#handleBack"
            style="-fx-background-color: #c3f1ff; -fx-font-weight: bold;"/>

    <!-- Class Overview Table -->
    <VBox layoutX="60" layoutY="100" spacing="10" alignment="CENTER">
        <Label text="📘 Class Overview"
               style="-fx-font-size: 20; -fx-font-weight: bold; -fx-background-color: #fff59d; -fx-padding: 5;"/>
        <TableView fx:id="classTable"
                   prefWidth="880" prefHeight="220"
                   style="-fx-background-color: white; -fx-border-color: #ccc; -fx-border-radius: 10; -fx-background-radius: 10;">
            <columns>
                <TableColumn fx:id="colClassName" text="Class Name" prefWidth="220"/>
                <TableColumn fx:id="colClassCode" text="Class Code" prefWidth="200"/>
                <TableColumn fx:id="colAvgScore" text="Average Score" prefWidth="200"/>
                <TableColumn fx:id="colStudentCount" text="Students" prefWidth="160"/>
            </columns>
        </TableView>
    </VBox>

    <!-- Right Side Panels -->
    <HBox layoutX="60" layoutY="370" spacing="30">
        <!-- Top Students -->
        <VBox spacing="8" prefWidth="420" style="-fx-background-color: #fff9c4; -fx-padding: 10; -fx-border-radius: 10; -fx-background-radius: 10;">
            <Label text="⭐ Top Students" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
            <ListView fx:id="topStudentsList" prefHeight="180"/>
        </VBox>

        <!-- Game Stats -->
        <VBox spacing="8" prefWidth="420" style="-fx-background-color: #c8e6c9; -fx-padding: 10; -fx-border-radius: 10; -fx-background-radius: 10;">
            <Label text="🎮 Game Averages" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
            <ListView fx:id="gameStatsList" prefHeight="180"/>
        </VBox>
    </HBox>

</AnchorPane>
