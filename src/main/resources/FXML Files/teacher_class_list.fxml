<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.learneria.controller.TeacherClassListController"
            prefWidth="1000" prefHeight="650"
            style="-fx-background-color: #fefcf6;">

    <top>
        <HBox spacing="20" alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
            <Button text="← Back" onAction="#handleBack"
                    style="-fx-background-color: #c3f1ff; -fx-font-weight: bold;"/>
            <Label text="Manage Classes" style="-fx-font-size: 26; -fx-font-weight: bold;"/>
            <Pane HBox.hgrow="ALWAYS"/>
            <Label fx:id="teacherNameLabel" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
            <Button text="Sign Out" onAction="#handleLogout"
                    style="-fx-background-color: #a3d6ff; -fx-font-weight: bold;"/>
        </HBox>
    </top>

    <left>
        <VBox spacing="10" prefWidth="340" style="-fx-padding: 16;">
            <Label text="Your Classes" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
            <ListView fx:id="classListView" prefWidth="320" prefHeight="520"/>
        </VBox>
    </left>

    <center>
        <VBox spacing="14" style="-fx-padding: 16; -fx-background-color: #fff9c4; -fx-border-color: #333; -fx-border-radius: 10; -fx-background-radius: 10;">
            <Label text="Class Details" style="-fx-font-size: 18; -fx-font-weight: bold; -fx-background-color: #ffec70; -fx-padding: 6;"/>

            <GridPane hgap="24" vgap="10">
                <columnConstraints>
                    <ColumnConstraints prefWidth="140"/>
                    <ColumnConstraints prefWidth="320"/>
                </columnConstraints>

                <Label text="Class Name:" GridPane.rowIndex="0" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <Label fx:id="classNameLabel" text="-" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

                <Label text="Class Code:" GridPane.rowIndex="1" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <Label fx:id="classCodeLabel" text="-" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

                <Label text="Students:" GridPane.rowIndex="2" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <Label fx:id="studentCountLabel" text="-" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

                <Label text="Average Score:" GridPane.rowIndex="3" GridPane.columnIndex="0" style="-fx-font-weight: bold;"/>
                <Label fx:id="avgScoreLabel" text="-" GridPane.rowIndex="3" GridPane.columnIndex="1"/>
            </GridPane>

            <Label text="Students" style="-fx-font-weight: bold;"/>
            <ListView fx:id="studentListView" prefHeight="280"/>
            <HBox alignment="CENTER_RIGHT">
                <Button fx:id="viewStudentButton" text="View Student ►" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
