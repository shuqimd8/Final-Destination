<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.*?>

<StackPane xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="com.learneria.controller.CreateAccountStudentController"
           prefWidth="683" prefHeight="683">

    <!-- ðŸŒˆ Background -->
    <ImageView fitWidth="683" fitHeight="683" preserveRatio="false">
        <image>
            <Image url="@/com/learneria/assets/backgrounds/Background.jpg" />
        </image>
    </ImageView>

    <!-- ðŸ’¾ Centered White Card -->
    <VBox alignment="CENTER" spacing="10"
          prefWidth="350" prefHeight="500"
          style="-fx-background-color: white;
                 -fx-background-radius: 15;
                 -fx-border-color: black;
                 -fx-border-width: 2;
                 -fx-border-radius: 15;
                 -fx-padding: 20;">

        <!-- Title -->
        <Label text="Papaâ€™s Learnaria"
               style="-fx-font-size: 30;
                      -fx-font-family: 'Josefin Sans';
                      -fx-font-weight: bold;
                      -fx-text-fill: #2563eb;" />

        <!-- Subtitle -->
        <Label text="Create Student Account"
               style="-fx-font-size: 18;
                      -fx-font-family: 'Josefin Sans';
                      -fx-font-weight: bold;
                      -fx-text-fill: #3DC6E8;
                      -fx-padding: 5 0 10 0;" />

        <!-- Name -->
        <VBox spacing="3" alignment="CENTER_LEFT">
            <Label text="Name:" style="-fx-font-size: 14; -fx-font-weight: bold;" />
            <TextField fx:id="nameField"
                       promptText="Enter Name"
                       prefWidth="220"
                       style="-fx-background-radius: 10;
                              -fx-border-radius: 10;
                              -fx-border-color: black;
                              -fx-border-width: 1.5;
                              -fx-padding: 6;" />
        </VBox>

        <!-- Username -->
        <VBox spacing="3" alignment="CENTER_LEFT">
            <Label text="Username:" style="-fx-font-size: 14; -fx-font-weight: bold;" />
            <TextField fx:id="usernameField"
                       promptText="Enter Username"
                       prefWidth="220"
                       style="-fx-background-radius: 10;
                              -fx-border-radius: 10;
                              -fx-border-color: black;
                              -fx-border-width: 1.5;
                              -fx-padding: 6;" />
        </VBox>

        <!-- Password -->
        <VBox spacing="3" alignment="CENTER_LEFT">
            <Label text="Password:" style="-fx-font-size: 14; -fx-font-weight: bold;" />
            <PasswordField fx:id="passwordField"
                           promptText="Enter Password"
                           prefWidth="220"
                           style="-fx-background-radius: 10;
                                  -fx-border-radius: 10;
                                  -fx-border-color: black;
                                  -fx-border-width: 1.5;
                                  -fx-padding: 6;" />
        </VBox>

        <!-- Retype Password -->
        <VBox spacing="3" alignment="CENTER_LEFT">
            <Label text="Retype Password:" style="-fx-font-size: 14; -fx-font-weight: bold;" />
            <PasswordField fx:id="retypePasswordField"
                           promptText="Retype Password"
                           prefWidth="220"
                           style="-fx-background-radius: 10;
                                  -fx-border-radius: 10;
                                  -fx-border-color: black;
                                  -fx-border-width: 1.5;
                                  -fx-padding: 6;" />
        </VBox>

        <!-- Teacher Code -->
        <VBox spacing="3" alignment="CENTER_LEFT">
            <Label text="Teacher Code (optional):" style="-fx-font-size: 14; -fx-font-weight: bold;" />
            <TextField fx:id="teacherCodeField"
                       promptText="Enter Teacher Code"
                       prefWidth="220"
                       style="-fx-background-radius: 10;
                              -fx-border-radius: 10;
                              -fx-border-color: black;
                              -fx-border-width: 1.5;
                              -fx-padding: 6;" />
        </VBox>

        <!-- Buttons -->
        <VBox spacing="10" alignment="CENTER" style="-fx-padding: 15 0 0 0;">
            <Button text="Create" onAction="#handleSubmit"
                    prefWidth="200" prefHeight="35"
                    style="-fx-background-color: #66CCFF;
                           -fx-border-color: black;
                           -fx-border-width: 1.5;
                           -fx-background-radius: 15;
                           -fx-border-radius: 15;
                           -fx-text-fill: black;
                           -fx-font-weight: bold;" />

            <Button text="Back" onAction="#handleBack"
                    prefWidth="200" prefHeight="35"
                    style="-fx-background-color: #FFEE77;
                           -fx-border-color: black;
                           -fx-border-width: 1.5;
                           -fx-background-radius: 15;
                           -fx-border-radius: 15;
                           -fx-text-fill: black;
                           -fx-font-weight: bold;" />
        </VBox>
    </VBox>
</StackPane>
