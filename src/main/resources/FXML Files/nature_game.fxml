<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.shape.Rectangle?>

<AnchorPane xmlns="http://javafx.com/javafx/21"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.learneria.controller.NatureGameController"
            prefWidth="800" prefHeight="600"
            style="-fx-background-color: #fffef7;">

    <!-- Title -->
    <Label text="Nature Game" layoutX="320" layoutY="20"
           style="-fx-font-size:26; -fx-font-weight:bold; -fx-text-fill:#222;"/>

    <!-- Draggable Words -->
    <Label fx:id="word1" text="Dog" layoutX="150" layoutY="200"
           style="-fx-font-size:20; -fx-background-color:#FFF59D; -fx-padding:5; -fx-border-color:#f0d000; -fx-border-radius:4;"/>
    <Label fx:id="word2" text="Tree" layoutX="350" layoutY="200"
           style="-fx-font-size:20; -fx-background-color:#FFF59D; -fx-padding:5; -fx-border-color:#f0d000; -fx-border-radius:4;"/>
    <Label fx:id="word3" text="Rock" layoutX="550" layoutY="200"
           style="-fx-font-size:20; -fx-background-color:#FFF59D; -fx-padding:5; -fx-border-color:#f0d000; -fx-border-radius:4;"/>

    <!-- Buckets -->
    <Rectangle fx:id="bucketAnimal" layoutX="100" layoutY="400" width="120" height="100" fill="LIGHTGRAY" stroke="BLACK" arcWidth="12" arcHeight="12"/>
    <Label text="Animal" layoutX="130" layoutY="510" style="-fx-font-size:14;"/>

    <Rectangle fx:id="bucketPlant" layoutX="270" layoutY="400" width="120" height="100" fill="LIGHTGRAY" stroke="BLACK" arcWidth="12" arcHeight="12"/>
    <Label text="Plant" layoutX="310" layoutY="510" style="-fx-font-size:14;"/>

    <Rectangle fx:id="bucketNonLiving" layoutX="440" layoutY="400" width="120" height="100" fill="LIGHTGRAY" stroke="BLACK" arcWidth="12" arcHeight="12"/>
    <Label text="Non-Living" layoutX="455" layoutY="510" style="-fx-font-size:14;"/>

    <Rectangle fx:id="bucketWeather" layoutX="610" layoutY="400" width="120" height="100" fill="LIGHTGRAY" stroke="BLACK" arcWidth="12" arcHeight="12"/>
    <Label text="Weather" layoutX="635" layoutY="510" style="-fx-font-size:14;"/>

    <!-- Score + Feedback -->
    <Label fx:id="scoreLabel" text="Score: 0" layoutX="40" layoutY="70"
           style="-fx-font-size:16; -fx-font-weight:bold; -fx-text-fill:#000;"/>

    <Label fx:id="feedbackLabel"
           text="Drag each word into the correct box!"
           layoutX="180" layoutY="100"
           prefWidth="440"
           wrapText="true"
           style="-fx-font-size: 16; -fx-text-fill: #3333FF; -fx-alignment: center;"/>

    <!-- Timer Label -->
    <Label fx:id="timerLabel" text="Time: 120s"
           layoutX="650" layoutY="30"
           style="-fx-font-size:18; -fx-font-weight:bold; -fx-text-fill:#222;"/>

    <!-- Back -->
    <Button text="Back to Menu"
            layoutX="20" layoutY="550" prefWidth="120"
            onAction="#handleBack"
            style="-fx-background-color:#e0e0e0; -fx-font-weight:bold;"/>
</AnchorPane>

